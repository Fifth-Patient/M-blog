{
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "semi": "warn"
    },
    "env": {
        "node": true,
        "es6": true,
        "mongo": true
    },
    "globals": {
        "beforeEach": true,
        "after": true,
        "afterEach": true,
        "it": true
    }
}